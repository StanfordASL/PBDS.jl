<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>
    <link name="${ns}_hand">
      <visual>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/hand.dae"/>
        </geometry>
      </visual>
      <xacro:visual_sphere radius=".033" xyz="0 -.077 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 .075 .012" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 .077 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 -.05 .002" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 -.046 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 .046 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 .016 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 -.016 .041" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 -.075 .002" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 .051 .003" material="redtran"/>
      <xacro:visual_sphere radius=".033" xyz="0 0 .003" material="redtran"/>
    </link>
    <link name="${ns}_leftfinger">
      <visual>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <xacro:visual_sphere radius=".017" xyz="0 .014 .022" material="greentran"/>
      <xacro:visual_sphere radius=".018" xyz="0 .015 .005" material="greentran"/>
      <xacro:visual_sphere radius=".014" xyz="0 .008 .044" material="greentran"/>
    </link>
    <link name="${ns}_rightfinger">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://franka_description/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <xacro:visual_sphere radius=".017" xyz="0 -.014 .022" material="greentran"/>
      <xacro:visual_sphere radius=".018" xyz="0 -.015 .005" material="greentran"/>
      <xacro:visual_sphere radius=".014" xyz="0 -.008 .044" material="greentran"/>
    </link>
    <link name="${ns}_hand_center">
      <xacro:visual_sphere radius=".02" xyz="0 0 0" material="bluetran"/>
    </link>
    <joint name="${ns}_finger_joint1" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_leftfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    </joint>
    <joint name="${ns}_finger_joint2" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_rightfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
      <mimic joint="${ns}_finger_joint1" />
    </joint>
    <joint name="${ns}_hand_center_joint" type="fixed">
      <parent link="${ns}_hand"/>
      <child link="${ns}_hand_center"/>
      <origin xyz="0 0 0.09" rpy="0 0 0"/>
    </joint>
  </xacro:macro>
</robot>
